# Build-time defaults for Moodle 4.5.7 on PHP 8.1
PHP_VERSION=8.1
MOODLE_VERSION=v4.5.7
DOCUMENT_ROOT=/var/www/moodle
APACHE_CONF=apache-4.x.conf

# Moodle git repository (override if you forked the Moodle upstream)
MOODLE_GIT_REPO=https://github.com/moodle/moodle.git

# Redis session tuning (used by docker/moodle-entrypoint.sh at runtime)
ENABLE_REDIS_SESSION=1
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TIMEOUT=2.5
REDIS_READ_TIMEOUT=2.5
REDIS_SESSION_LOCKING=1
REDIS_SESSION_LOCK_RETRIES=200
REDIS_SESSION_LOCK_WAIT=20000
REDIS_PCONNECT_POOLING=1

# Example PostgreSQL connection hints (configure inside Moodle installer)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=moodle
DB_USER=moodle
DB_PASSWORD=supersecret
